# Crypto Analytics - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ============================================
# DATABASE CONFIGURATION
# ============================================

# Database Provider: 'supabase' | 'postgres' | 'mysql' | 'mongodb'
VITE_DB_PROVIDER=supabase

# --------------------------------------------
# Supabase Configuration (if using Supabase)
# --------------------------------------------
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# --------------------------------------------
# PostgreSQL Configuration (if using direct PostgreSQL)
# --------------------------------------------
# VITE_DB_HOST=localhost
# VITE_DB_PORT=5432
# VITE_DB_NAME=crypto_analytics
# VITE_DB_USER=postgres
# VITE_DB_PASSWORD=your-secure-password
# VITE_DB_SSL=true

# --------------------------------------------
# MySQL Configuration (if using MySQL)
# --------------------------------------------
# VITE_DB_HOST=localhost
# VITE_DB_PORT=3306
# VITE_DB_NAME=crypto_analytics
# VITE_DB_USER=root
# VITE_DB_PASSWORD=your-secure-password

# --------------------------------------------
# MongoDB Configuration (if using MongoDB)
# --------------------------------------------
# VITE_MONGODB_URI=mongodb://localhost:27017/crypto_analytics
# VITE_MONGODB_USER=admin
# VITE_MONGODB_PASSWORD=your-secure-password

# ============================================
# API KEYS (if needed)
# ============================================
# VITE_COINMARKETCAP_API_KEY=your-api-key
# VITE_COINGECKO_API_KEY=your-api-key
# VITE_LIVECOINWATCH_API_KEY=your-api-key

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# VITE_APP_NAME=Crypto Analytics
# VITE_APP_URL=http://localhost:5173
# VITE_API_BASE_URL=http://localhost:3000/api

# ============================================
# DEVELOPMENT OPTIONS
# ============================================
# NODE_ENV=development
# VITE_DEBUG=true
